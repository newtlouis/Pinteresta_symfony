{% extends 'base.html.twig' %}

{% block body %}

	<article style="width:600px; margin:0 auto">
		<h2>{{ pin.title }}</h2>
		<div class="metadata">écrit le
			{{pin.createdAt | date('d/m/Y')}}
			à
			{{pin.createdAt | date('H:i')}}
			dans la catégorie
			{{pin.category.title}}</div>
		<div class="content">
			<img src={{pin.image}} alt="image_test">
			{{pin.content | raw}}
		</div>
		<a href="{{ path('pin_edit', {'id' : pin.id}) }}" class="btn btn-primary my-4">Modifier</a>

	</article>

	<section class="comments" style="width:600px; margin:0 auto">
		{% for comment in pin.comments %}
			<div class="comment" style="border-style: solid; border-radius:10px; border-color: grey; padding:10px;margin:5px">
				<div class="row">
					<div class="col">
						{{comment.author}}
						<small>
							le
							{{comment.createdAt | date('d/m/Y à H:i')}}</small>
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{comment.content | raw}}
					</div>
				</div>
			</div>
		{% endfor %}
	</section>

{% endblock %}
